<?xml version="1.0" encoding="utf-8"?>
<extension type="component"
           version="2.5.0"
           method="upgrade">

	<name>COM_ZOLLBACK</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>November 2014</creationDate>
	<author>ManhDT</author>
	<authorEmail>domanhcp@gmail.com</authorEmail>
	<authorUrl>zollback.pixub.com</authorUrl>
	<copyright>Copy left</copyright>
	<license>GNU</license>
	<!--  The version string is recorded in the components table -->
	<version>1.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Zollback ultimate component</description>

	<update> <!-- Runs on update; New in 2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
		</sql>
	</install>

	<uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>zollback.php</filename>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>Zollback</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
				to copy FROM in the package to install therefore files copied
				in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>zollback.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>css</folder>
			<file>controller.php</file>
		</files>
	</administration>

</extension>


