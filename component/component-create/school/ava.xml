    <description>AVA</description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>ava.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB/en-GB.com_ava.ini</language>
			<language tag="vi-VN">language/vi-VN/vi-VN.com_ava.ini</language>
    </languages>
    <administration>
        <menu img="components/com_ava/assets/images/s_com_ava.png" >COM_AVA</menu>
        <submenu>
            
			<menu link="option=com_ava&amp;view=schools" view="schools" img="components/com_ava/assets/images/s_schools.png" alt="Ava/Schools">COM_AVA_TITLE_SCHOOLS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>ava.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB/en-GB.com_ava.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_ava.sys.ini</language>
			<language tag="vi-VN">language/vi-VN/vi-VN.com_ava.ini</language>
			<language tag="vi-VN">language/vi-VN/vi-VN.com_ava.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="ava"/>
    </plugins>
</extension>
